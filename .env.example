# Application
NODE_ENV=development
APP_URL=http://localhost:3000
API_URL=http://localhost:4000
AI_API_URL=http://localhost:5000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aaiaas
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Authentication
# ⚠️ CRITICAL SECURITY WARNING ⚠️
# These are EXAMPLE values only! DO NOT use in production!
# Generate strong random secrets using: openssl rand -base64 32
# Minimum 32 characters required for production security
JWT_SECRET=EXAMPLE_ONLY_REPLACE_WITH_STRONG_RANDOM_SECRET_MIN_32_CHARS
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=EXAMPLE_ONLY_REPLACE_WITH_DIFFERENT_STRONG_RANDOM_SECRET_MIN_32_CHARS
REFRESH_TOKEN_EXPIRES_IN=7d

# OpenAI
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Stripe (Optional - for billing)
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email (SendGrid - Optional)
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your-sendgrid-api-key
FROM_EMAIL=noreply@aaiaas.ai

# Storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads
# For S3-compatible storage:
# STORAGE_TYPE=s3
# S3_BUCKET=aaiaas-storage
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your_access_key
# S3_SECRET_KEY=your_secret_key

# Monitoring (Optional)
# Get DSN from: https://sentry.io/settings/projects/
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_SIGNUP=true
ENABLE_OAUTH=false
ENABLE_WEBHOOKS=true

# CORS
# For multiple origins, use comma-separated values: http://localhost:3000,https://app.example.com
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

